<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boardButton"
            android:layout_marginBottom="428dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>
    <TextView
            android:text="Labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelsText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/timeText" app:layout_constraintVertical_bias="0.322"
            android:layout_marginTop="16dp" android:textSize="36sp"/>
    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="36sp" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/boardButton"/>
    <Button
            android:text="@string/sitdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sitdownButton" app:layout_constraintEnd_toStartOf="@+id/boardButton"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/getoffButton" android:layout_marginStart="8dp"
            android:layout_marginBottom="428dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.549"/>
    <Button
            android:text="@string/getoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getoffButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="428dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="CSVの読み込み"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/readButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sitdownButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="加速度の値"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accelText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="14sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView
            android:text="加速度センサ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/readButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" android:textSize="18sp"/>
    <TextView
            android:text="ジャイロセンサ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/accelText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" android:textSize="18sp"/>
    <TextView
            android:text="ジャイロの値"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gyroText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.018" android:textSize="14sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>